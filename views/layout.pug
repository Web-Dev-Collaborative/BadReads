doctype html
html
  head
      block head
        title="Bad Reads"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="stylesheet" href="/stylesheets/layout.css")
        link(rel='stylesheet', href='/stylesheets/form.css')
  body
    nav(class="nav-bar")
      div(id="bad-reads-logo")
        a(href="/")
          img(src="../stylesheets/images/bad_reads.png" id="bad-reads-logo")

      div(class="bad-tag-line")
        p MISERY LOVES COMPANY

      div
        input(type="submit" value="Genre" class=genre-btn)
      div
        input(type="submit" value="Sort By" class=sort-btn)
        //- select
        //-   each genre in genres
        //-     option=genre.name

      div
        if locals.authenticated
          form(action="/user/logout" method="post")
            input(type="submit" value="Logout")
        else
          div
            span
              a(href="/user/login"): button Login
              form(action="/user/demo" method="post")
                input(type="submit" value="Demo User")
              a(href="/user/signup"): button Sign Up
      div


    block content


    footer(class="footer-bar")
