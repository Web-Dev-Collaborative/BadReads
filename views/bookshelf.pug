extends layout.pug


block content
    div(class="bookshelf-container")
        div(class="sidebar")
            ul
                li all
                    a(href= "/bookshelf/all")
                        button button
                li unread
                    a(href= "/bookshelf/wantToRead")
                        button button
                li currently reading
                    a(href= "/bookshelf/Reading")
                        button button
                li read
                    a(href= "/bookshelf/haveRead")
                        button button

        div(class="main-page")
            table
                thead
                    th title
                    th status
                    th rating
                    th review
                tbody
                    each book in userBookInfo.Books
                        tr
                            td=book.name
                            td=book.UserBook.status
                            td=book.UserBook.rating
                            td=book.UserBook.review
